<?xml version='1.0' encoding='utf-8' ?>
<widget id="io.cocoon.template.ads" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:cocoon="http://cocoon.io/ns/1.0">
    <name>Cocoon Ads Template</name>
    <description>
        Ads template for Cocoon.io cloud compiler based on Cocoon Ads Plugins (https://github.com/ludei/atomic-plugins-ads#javascript-api) and Pixi.js (https://github.com/GoodBoyDigital/pixi.js)
    </description>
    <author email="nazari@ludei.com" href="http://ludei.com/">
        Nazarí González
    </author>
    
    <!-- Shown in the wizard -->
    <icon src="icon.png" />

    <content src="index.html" />
    <access origin="*"/>

    <preference name="Orientation" value="landscape"/>
    <preference name="Fullscreen" value="true" />

    <cocoon:plugin name="com.ludei.canvasplus.ios" />
    <cocoon:plugin name="com.ludei.canvasplus.android" />  

    <!-- Admob Plugins -->
    <cocoon:plugin name="cocoon-plugin-ads-ios-admob"/>
    <cocoon:plugin name="cocoon-plugin-ads-android-admob"/>

    <!-- ANDROID -->
    <platform name="android">
        <!-- Mopub data -->
        <preference name="mopub_banner" value="68949c5d9de74b79bb79aa29c203ca02" />
        <preference name="mopub_interstitial" value="74a813ae7a404881bf17eb8d1b0aa943" />
    </platform>

    <!-- IOS -->
    <platform name="ios">
        <!-- Mopub data -->
        <preference name="mopub_banner" value="agltb3B1Yi1pbmNyDQsSBFNpdGUY5dDoEww" />
        <preference name="mopub_banner_ipad" value="agltb3B1Yi1pbmNyDQsSBFNpdGUYk8vlEww" />
        <preference name="mopub_interstitial" value="agltb3B1Yi1pbmNyDQsSBFNpdGUYjf30Eww" />
        <preference name="mopub_interstitial_ipad" value="agltb3B1Yi1pbmNyDQsSBFNpdGUYjf30Eww" />
    </platform>
</widget>
